set editing-mode vi
$if gdb
    set editing-mode emacs
$endif

set keymap vi-insert
TAB: menu-complete
# \e[Z is Shift-TAB
"\e[Z": menu-complete-backward
Control-l: clear-screen
Control-f: forward-char
Control-b: backward-char
"\ef": forward-word
"\eb": backward-word
"\et": transpose-words
Control-e: end-of-line
Control-a: beginning-of-line

Control-d: delete-char
Control-h: backward-delete-char
"\ed": kill-word
Control-w: backward-kill-word
Control-k: kill-line
Control-u: backward-kill-line
Control-p: history-search-backward
Control-n: history-search-forward

# These are the arrow keys, left and right
"\e[1;2D": backward-word
"\e[1;2C": forward-word

"\ey": yank-pop

"\C-x\C-r": re-read-init-file
# NOT USED / FREE
# Almost all meta key combinations
# CTRL-[gjmoqtxz]
$if Bash
$endif

set keymap vi
TAB: menu-complete
Control-l: clear-screen
s: re-read-init-file
G: beginning-of-history
g: end-of-history
Control-T: transpose-words
J: downcase-word
K: upcase-word
L: capitalize-word
$if Bash
    # Wrap/Unwrap entire line around $()
    +: "0i$(\e$a)\e"
    "-": "0xx$x"
    # Wrap/Unwrap word under cursor around quotes ""
    Control-J: "BxEx"
    Control-K: "Bi\"\eEa\"\e"
$endif

set bind-tty-special-chars off
set blink-matching-paren on
set colored-completion-prefix on
set colored-stats on
set completion-ignore-case on
set completion-map-case on
set enable-bracketed-paste on
set expand-tilde on
set skip-completed-text on
set show-all-if-ambiguous on
set visible-stats on
set keyseq-timeout 0

set show-mode-in-prompt on
set emacs-mode-string \1\e[31;1m\2(EMACS) >> \1\e[0m\2
set vi-cmd-mode-string \1\e[33;49;1m\e[2 q\2::: \1\e[0m\2
set vi-ins-mode-string \1\e[32;49;1m\e[6 q\2>>> \1\e[0m\2
